  ng-init="init('register')"
  data-validate=""
  novalidate=""
  data-customersourceidprepend="VN"
  data-sourceapi=""
>
  <div
    ng-if="formData"
    ng-init="initNestedData()"
    class="row personal-info-header"
  >
    <div class="col-12">
      <h5>Thông Tin Cá Nhân</h5>
      <pre>{{formData.obj|json}}</pre>
      <pre>{{receipt.obj|json}}</pre>
    </div>
  </div>
  <div class="personal-info">
    <div class="row fields">
      <div class="col-12 col-lg-6">
        <div class="row">
          <div class="col-4 col-lg-3">
            <div class="form-group">
              <select
                ng-model="formData.obj.gioi_tinh"
                class="form-control customized-dropdown"
                id="sel1"
              >
                <option value="" selected disabled>Giới Tính ▼</option>
                <option value="Ông">Ông</option>
                <option value="Bà">Bà</option>
              </select>
            </div>
          </div>
          <div class="col-8 col-lg-9">
            <label
              ><input
                ng-model="formData.obj.ho"
                type="text"
                name="lastName"
                placeholder="*Họ"
                aria-describedby="lastname"
                required=""               
                aria-label="lastName" />
              <span class="form-validate-error"></span
            ></label>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-6">
        <label
          ><input
            ng-model="formData.obj.ten"
            type="text"
            name="firstName"
            placeholder="*Tên"
            aria-describedby="firstName"
            required=""
            pattern="alpha"
            data-required="Bắt buộc nhập"
            data-valid="Tên không hợp lệ. Vui lòng nhập lại"
            aria-label="firstName" />
          <span class="form-validate-error"></span
        ></label>
      </div>
      <div class="col-12 col-lg-6">
        <div class="row">
          <div class="col-12 col-lg-6">
            <label
              ><input
                ng-model="formData.obj.so_dien_thoai"
                type="text"
                name="contactNumber"
                placeholder="*Số điện thoại"
                data-removealtnum="Thêm số điện thoại thay thế "
                data-addaltnum="Số điện thoại thay thế "
                data-altplaceholder="Số điện thoại thay thế "
                aria-describedby="number"
                required=""
                pattern="number"
                data-required="Bắt buộc nhập"
                data-valid="Số điện thoại không chính xác. Vui lòng thử lại "
                data-altvalid="Số điện thoại thay thế không chính xác. Vui lòng thử lại "
                aria-label="contactNumber" />
              <span class="form-validate-error"></span
            ></label>
          </div>
          <div class="col-12 col-lg-6">
            <div class="fields-email">
              <label
                ><input
                  ng-model="formData.obj.email"
                  type="email"
                  name="email"
                  placeholder="*Email"
                  data-removealtemail="Thêm email thay thế "
                  data-addaltemail="Email thay thế "
                  data-altplaceholder="Email thay thế "
                  aria-describedby="email"
                  required=""
                  ng-pattern="email"
                  data-required="Bắt buộc nhập"
                  data-valid="Địa chỉ mail không chính xác. Vui lòng thử lại "
                  data-altvalid="Email thay thế không chính xác. Vui lòng thử lại "
                  aria-label="email" />
